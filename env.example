# MongoDB Configuration
MONGODB_URL=mongodb://admin:password@mongodb:27017/speak_ai_db?authSource=admin
DATABASE_NAME=speak_ai_db

# Security Configuration (CRITICAL: Use strong secrets in production)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-at-least-32-characters-long-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Services Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Azure Speech Services (Optional)
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus

# TTS Configuration
TTS_BACKEND_BASE_URL=http://tts_kokoro:8880

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=SpeakAI Backend
APP_VERSION=1.0.0

# File Upload Configuration
UPLOAD_DIR=app/uploads
MAX_UPLOAD_SIZE=52428800

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

# Performance Configuration
WORKER_COUNT=1 